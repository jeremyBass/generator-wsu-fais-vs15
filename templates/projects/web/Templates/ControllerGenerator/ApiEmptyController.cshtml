@inherits Microsoft.VisualStudio.Web.CodeGeneration.Templating.RazorTemplateBase
using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using Microsoft.AspNetCore.Http;
using Microsoft.AspNetCore.Mvc;


// may not be needed but we will keep as a better stub.  After all is said and done
// it is expected that there will be the using's clean up performed
<% if (features.indexOf("cors") > -1 || features.indexOf("all") > -1 ) { %>
using Microsoft.AspNetCore.Cors;
<% } %>
using Microsoft.AspNetCore.Hosting;
using Microsoft.AspNetCore.Authorization;
using Microsoft.EntityFrameworkCore;
using Newtonsoft.Json;
using Microsoft.AspNetCore.Identity;
using System.Text;
using System.Data.Common;

@{string modelName = (Model.ClassName.EndsWith("Controller") ? Model.ClassName.Substring(0, Model.ClassName.Length - 10) : Model.ClassName);}

namespace @Model.NamespaceName
{
@{
    string routePrefix = "api/" + modelName;
}
<% if (features.indexOf("cors") > -1 || features.indexOf("all") > -1 ) { %>
    [EnableCors("AllowAll")]
<% } %>
    [ResponseCache(NoStore = true, Duration = 0)]
    [Produces("application/json")]
    [Route("@routePrefix")]
    public class @Model.ClassName : Controller
    {
    }
}