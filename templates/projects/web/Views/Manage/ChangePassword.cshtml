@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h2>@ViewData["Title"].</h2>

<form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
    <h4>Change Password Form</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="pad-tight-b flex-row">
        <label asp-for="OldPassword" class="tenths-3 control-label"></label>
        <div class="tenths-7">
            <input asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="pad-tight-b flex-row">
        <label asp-for="NewPassword" class="tenths-3 control-label"></label>
        <div class="tenths-7">
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="pad-tight-b flex-row">
        <label asp-for="ConfirmPassword" class="tenths-3 control-label"></label>
        <div class="tenths-7">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="pad-tight-b flex-row">
        <div class="offset-tenths-3-l tenths-7">
            <button type="submit" class="btn">Change password</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
